{
    "editor.tokenColorCustomizations": {
        "[*Light*]": {
            "textMateRules": [{}]
        },
        "[*Dark*]": {
            "textMateRules": [
                {
                    "scope": [
                        "string.quoted.double.html",
                        "variable.other.constant.js",
                        "variable.other.object.property.js",
                        "string.quoted.double.json",
                        "markup.fenced_code.block.markdown",
                        "markup.inline.raw.string.markdown",
                        "variable.function",
                        "keyword.other.special-method",
                        "entity.name.function",
                        "meta.function-call.generic.python",
                        "variable.function.constructor",
                        "source.sass keyword.control"
                    ],
                    "settings": {
                        "foreground": "#35a1ff"
                    }
                }
            ]
        }
    },
    "workbench.colorCustomizations": {
        "minimap.background": "#000000",
		"editorSuggestWidget.foreground": "#ffffff",
        "notebook.editorBackground": "#303030",
        "editor.selectionBackground": "#555555"

        // "editor.background": "#ffffff",
        // "notebook.cellEditorBackground": "#dddddd",
        // "notebook.outputContainerBackgroundColor": "#111111",
        // "notebook.outputContainerBorderColor": "#ffffff",
        // "editor.background": "#2a2a2a"
        // "notebook.focusedCellBackground": "#000000",
        // "notebook.cellEditorBackground": "#333333",
        // "notebook.cellBorderColor": "#555555"
    },
    // Controls if quick suggestions should show up while typing
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "editor.suggestOnTriggerCharacters": true,
    // Enable parameter hints
    "editor.parameterHints.enabled": true,
    "editor.hover.delay": 100,
    "editor.guides.indentation": false,
    "editor.renderLineHighlight": "none",
    "editor.cursorBlinking": "solid",
    "editor.suggest.showInlineDetails": false,
    "debug.inlineValues": "on",
    "editor.inlayHints.enabled": "off",
    "vim.disableExtension": true,
    "notebook.insertToolbarLocation": "notebookToolbar",
    "notebook.showCellStatusBar": "hidden",
    "notebook.showFoldingControls": "never",
    "notebook.stickyScroll.mode": "flat",
    "notebook.output.textLineLimit": 50,
    "editor.fontFamily": "Roboto Mono Medium",
    "editor.fontSize": 11,
    "editor.fontWeight": "normal",
    "editor.cursorWidth": 1,
    "editor.foldingHighlight": true,
    "editor.folding": true,
    "jupyter.interactiveWindow.textEditor.cellFolding": false,
    "editor.showFoldingControls": "never",
    "editor.fontLigatures": true,
    "notebook.output.fontSize": 11,
    "notebook.output.fontFamily": "Roboto Mono Medium",
    "editor.fontVariations": false,
    "editor.formatOnSave": true,
    "terminal.integrated.fontFamily": "Ubuntu Mono",
    "terminal.integrated.fontWeight": "normal",
    "editor.defaultFormatter": "ms-python.black-formatter",
    "notebook.defaultFormatter": "ms-python.black-formatter",
    "notebook.formatOnCellExecution": true,
    "github.copilot.advanced": {},
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "python.languageServer": "Pylance",
    "python.analysis.autoFormatStrings": true,
    "jupyter.completionTriggerCharacters": {
        "bash": [
            "$",
            "{"
        ],
        "java": [
            ".",
            "@",
            "#"
        ],
        "javascript": [
            ".",
            "\"",
            "'",
            "/",
            "@"
        ],
        "python": [
            ".",
            "%",
            "'",
            "\""
        ],
        "jupyter": [
            ".",
            "%"
        ],
        "julia": [
            "."
        ],
        "r": [
            "[",
            "(",
            ",",
            "$",
            "@",
            "\"",
            "'"
        ],
        "rust": [
            ".",
            ":"
        ],
        "scala": [
            "."
        ],
        "typescript": [
            ".",
            "\"",
            "'",
            "/",
            "@",
            "<"
        ]
    },
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.letterSpacing": 0,
    "editor.letterSpacing": 0,
    "editor.lineHeight": 1.2,
    "terminal.integrated.fontSize": 13,
    "jupyter.askForKernelRestart": false,
    "github.copilot.chat.codesearch.enabled": true,
    "github.copilot.selectedCompletionModel": "gpt-4o-copilot",
    "workbench.iconTheme": "Monokai Classic Icons",
    "files.autoSave": "afterDelay",
    "chat.editor.fontSize": 11.4,
    "jupyter.widgetScriptSources": [
        "jsdelivr.com",
        "unpkg.com"
    ],
    "workbench.colorTheme": "Jupyter Dark Theme",
}
